@using CullinaryCrossroads1._1.Core.Services
@model FoodDetailsServiceModel

@{
    ViewBag.Title = "All about the recipe";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="Recipe Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Title</u></p>
            
            
            <p>@Model.Recipe</p>
            <p>Category: <b>@Model.Category</b></p>
            <p><i>(@(Model.IsLiked ? "This recipe is liked by you" : "This recipe is not liked by you"))</i></p>
            <div class="form-inline">
                @if (this.User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-warning" asp-controller="Food" asp-action="Edit"
                   asp-route-id="@Model.Id">Edit</a>
                    <a class="ml-2 btn btn-danger" asp-controller="Food" asp-action="Delete"
                   asp-route-id="@Model.Id">Delete</a>
                    @if (!Model.IsLiked)
                    {
                        <form class="ml-2" asp-controller="Food"
                      asp-action="Like" asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Like" />
                        </form>
                    }
                    else
                    {
                        <form class="ml-2" asp-controller="Food" asp-action="Unlike"
                      asp-route-id="@Model.Id" method="post">
                            <input class="btn btn-primary" type="submit" value="Unlike" />
                        </form>
                    }
                }
            </div>
            <p></p>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Agent Info</h5>
                    <p class="card-text">Email:  @Model.Agent.Email</p>
                    <p class="card-text">Phone Number: @Model.Agent.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>
</div>
